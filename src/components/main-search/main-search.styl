@import '~common/stylus/variable.styl'
@import '~common/stylus/mixin.styl'
.main-search
  position fixed
  top 0
  left 0
  z-index $g-zindex-fix
  width 100vw
  height 100%
  .inner
    margin 0 auto $g-bot-bar-height
    width 100%
    height 100%
    max-width $g-page-max-width
    background $g-bgc-body
    .top-bar
      display flex
      justify-content space-between
      align-items center
      height $g-fix-bar-height
      width 100%
      background $g-bgc-con
      margin-bottom 1px
      .search-form
        flex 100%
        padding-left 1rem
        .search-input
          padding-left $g-padding-xl
          border-radius $g-search-inp-height
          width 100%
          height $g-search-inp-height
          background $g-col-white-g
          &:focus
            outline none
            g-box-sd()
      .search-btn,
      .msg-btn
        height $g-fix-bar-height
        flex 0 0 5.5rem
        text-align center

        > img
          width $g-top-icon-w
          height $g-top-icon-w
        > p
          text-align center
          font-size $g-fs-min
          color $g-fc-white
      .search-btn
        line-height $g-fix-bar-height
        > span
          border-radius .2rem
          padding $g-padding-sm
          font-size $g-fs-xxl
          color $g-fc-white
          background $g-col-red
  dl
    margin-bottom $g-margin-sm
    background $g-bgc-con
    padding-bottom $g-con-padding-normal
    dt
      display flex
      justify-content space-between
      align-items center
      position relative
      height 4rem
      padding 0 1rem
      > div
        height 4rem
        line-height 4rem
      .title
        font-size $g-fs-max
        font-weight 500
      .delete
        width 2rem
        height 2rem
        bg-image("img/shanchu")
    dd
      ul
        list-style none
        display flex
        flex-wrap wrap
        flex-direction row
        li
          display inline-block
          margin .5rem
          padding .5rem
          max-width 100%
          background $g-bgc-gray
          a
            display: inline-block
            overflow hidden
            height 1rem
            max-width 10rem
            color $g-fc-normal
            font-size $g-fs-md

