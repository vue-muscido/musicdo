@import '~common/stylus/variable.styl'
@import '~common/stylus/mixin.styl'
.search-list
  position fixed
  top 0
  left 0
  z-index $g-zindex-fix + 1
  width 100vw
  height 100%
  .inner
    margin 0 auto $g-bot-bar-height
    width 100%
    height 100%
    max-width $g-page-max-width
    background $g-bgc-body
    .top-bar
      display flex
      justify-content space-between
      align-items center
      height $g-fix-bar-height
      width 100%
      background $g-bgc-con
      margin-bottom 1px
      .search-form
        flex 100%
        padding-left 1rem
        .search-input
          padding-left $g-padding-xl
          border-radius $g-search-inp-height
          width 100%
          height $g-search-inp-height
          background $g-col-white-g
          font-size $g-fs-md
          transition box-shadow .5s
          &:focus
            outline none
            g-box-sd()
      .change-btn
        display flex
        justify-content center
        align-items center
        height $g-fix-bar-height
        flex 0 0 5.5rem
        text-align center
        .img
          width $g-top-icon-w
          height $g-top-icon-w
        &.bigpic-mode
          .img
            bg-image("img/liebiao")
        &.list-mode
          .img
            bg-image("img/tupian")
