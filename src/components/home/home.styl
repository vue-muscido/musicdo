@import '~common/stylus/variable.styl'
@import '~common/stylus/mixin.styl'

.home
  .top-bar
    display flex
    justify-content space-between
    align-items center
    position fixed
    top 0
    z-index 10
    height $g-fix-bar-height
    width 100%
    max-width $g-page-max-width
    background url("./img/topbar-bg.png") no-repeat center
    margin-bottom 1px
    transition all .5s
    .search-form
      flex 100%
      padding-left 1rem
      .search-input
        position relative
        padding-left $g-padding-xxl
        padding-right $g-padding-lg
        border-radius $g-search-inp-height
        width 100%
        height $g-search-inp-height
        line-height $g-search-inp-height
        background $g-col-white-g
        font-size $g-fs-md
      .search-icon
        content ''
        position absolute
        left 2rem
        top 50%
        width $g-fs-md
        height $g-fs-md
        bg-image("./img/search")
        transform translate3d(0,-50%,0)
    .msg-btn
      display flex
      flex-direction column
      justify-content center
      align-items center
      height $g-fix-bar-height
      flex 0 0 5.5rem
      text-align center
      > img
        width $g-top-icon-w
        height $g-top-icon-w
      > p
        text-align center
        font-size $g-fs-min
        color $g-fc-white
