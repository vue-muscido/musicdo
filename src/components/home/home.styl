@import '~common/stylus/variable.styl'
@import '~common/stylus/mixin.styl'

.home
	.home-header
		position fixed
		z-index 100
		width 100%
		max-width $g-page-max-width
		height $g-fix-bar-height
		line-height $g-fix-bar-height
		background-color $g-col-red
		h2
			padding-left $g-padding-lg
			font-size $g-fs-lg
			color $g-col-white-g
	.cube-slider
		padding-top $g-fix-bar-height
		width 100%
		height auto
		.slider-img
			width 100%
			height auto
	.goods-list-container
		padding 0 1rem
		background-color #fff
		.list-title
			position relative
			padding 1.2rem 0.5rem
			font-size 0
			.title-tab	
				display inline-block
				margin-right 0.75rem
				height 1.5rem
				width 0.3rem
				background-color rgb(18,86,105)
			.title-name
				vertical-align top
				display inline-block
				font-size 1.5rem
				height 1.5rem
				line-height 1.5rem
			.title-more
				position absolute
				padding-right 1rem
				top 1.2rem
				right 0.5rem
				font-size 1.3rem
				height 1.5rem 
				line-height 1.5rem
				color #666
				bg-image("img/jiantou", 0.6rem)
				background-position center right
		.list-box
			width 100%
		.goods-box
			display inline-block
			box-sizing border-box
			padding 0 0.5rem 1rem
			width 50%
			.goods-content
				vertical-align top
				box-sizing border-box
				border 1px solid #f3f3f3
				width 100%
				.goods-img-box
					width 100%
					height auto
					.goods-img
						width 100%
						height auto
						vertical-align top
				.goods-title
					height 3rem
					vertical-align top








