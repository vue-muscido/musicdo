@import '~common/stylus/variable.styl'
@import '~common/stylus/mixin.styl'
// 登录输入框公共样式 -begin
.input-bar
  .cube-input
    position: relative
    font-size: $g-fs-lg
    line-height: 1.429
    border-bottom 1px solid $g-brc-normal
    input
      width: 100%
      padding: .75rem
      color: $g-fc-black
      line-height: inherit
      background-color: $g-bgc-con
      border-radius: 2px
      outline: none
    .cube-input_active
      &::after
        border-color transparent
    .cube-input-clear, .cube-input-eye
      position absolute
      right 1rem
      top 50%
      padding 0
      margin 0
      width auto
      height auto
      line-height 1
      transform translate3d(0,-50%,0)
      > i
        display: inline-block
        transform: scale(1.2)
      + input
        padding-right: 2.6em
    .cube-input-eye
      >
      .cubeic-eye-invisible, .cubeic-eye-visible
        transform: scale(1.4)
    .cube-input-clear
      + .cube-input-eye
        right: 2.6em
        + input
          padding-right: 5.2em
// 登录输入框公共样式 -end


.user-sign-in
  background $g-bgc-con
  z-index 1
  .logo-bar
    width 100%
    height 18rem
    .logo
      position relative
      top 8rem
      margin 0 auto
      width 10rem
      height 4.5rem
      bg-image('./img/logo',100% 100%)
  .input-bar
    padding 1rem
  .quick-bar
    display flex
    justify-content space-between
    align-items center
    padding 0 2rem
    font-size $g-fs-lg
    color $g-fc-normal
  .btn-bar
    height 4rem
    width 100%
    margin 3rem auto 0
    font-size $g-fs-xl
    color $g-fc-white
    .sign-in-btn
      display flex
      justify-content center
      align-items center
      margin 0 auto
      height 100%
      width 80%
      border-radius 4rem
      background $g-col-red
  .new-account-bar
    display flex
    justify-content center
    align-items center
    margin 1rem auto
    width 100%
    .new-account-btn
      color $g-fc-red-tit
      font-size $g-fs-lg
  .other-way-bar
    position absolute
    bottom 0
    width 100%
    height 10rem
    > h3
      position relative
      text-align center
      font-size $g-fs-lg
      color $g-fc-normal
      > span
        padding 0 1rem
        z-index 1
        background $g-bgc-con
        &::before
          position absolute
          top 50%
          left 50%
          z-index -1
          content ''
          height 1px
          width 90%
          background $g-brc-normal
          transform translate3d(-50%,-50%,0)
    .other-way
      display flex
      justify-content center
      align-items center
      width 100%
      height 100%
      > div
        margin 0 2rem
        width 4.5rem
        height 4.5rem
      .wx
        bg-image('./img/wx')
      .qq
        bg-image('./img/QQ')

