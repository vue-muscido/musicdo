@import '~common/stylus/variable.styl'
@import '~common/stylus/mixin.styl'
.cart
  .scroll
    position fixed
    top $g-fix-bar-height
    bottom $g-bot-bar-height*2
    width 100%
    max-width $g-page-max-width
  .cart-empty
    height 100%
  .go-buy
    margin 2.0rem auto
    width 8.0rem
    height 2.8rem
    line-height 2.8rem
    font-size $g-fs-xl
    background-color $g-bgc-btn-red
    color $g-fc-white
    text-align center
    border-radius 4px
    opacity 0.9
    extend-click()
  .edit-all
    display flex
    heignt $g-fix-bar-height
    background-color $g-col-red
    justify-content space-between
    .msg-btn
      display flex
      flex 0 0 5rem
      flex-direction column
      justify-content center
      align-items center
      height $g-fix-bar-height
      line-height $g-fix-bar-height
      text-align center
      extend-click()
      > img
        width $g-top-icon-w
        height $g-top-icon-w
    .btn-edit-all
      padding 0 0.75rem
      flex 0 0 5.5rem
      line-height 4rem
      font-size $g-fs-xl
      color $g-col-white-g
      text-align right
      extend-click()
  .shop-con
    margin-bottom 1rem
    background-color $g-bgc-con
  .shop-title
    display flex
    height 4rem
    line-height 4rem
    font-size $g-fs-xl
    color $g-fc-black
    span
      vertical-align top
      font-size $g-fs-xl
    .shop
      flex 1
      position relative
      overflow hidden
      .btn-shop
        position absolute
        z-index 100
        top 0
        left 0
        width 100%
        height 110%
    .shop-check
      height 100%
    .btn-shop-edit
      padding 0 0.75rem
      height 100%
  .cart-list
    .item
      margin-top 1px
      width 100%
      height 100px
      background-color $g-bgc-con
  .item-inner
    border-bottom 1px solid $g-bgc-gray
    padding 1rem 0
    display flex
    background-color $l-bgc-cart
    font-size $g-fs-xl
    .choose
      position relative
    .btn-choose
      position absolute
      z-index 100
      top 0
      left 0
      width 100%
      height 100%
    .cube-checkbox
      padding-right 4px
      color $g-bgc-btn-red
    .check
      height 8rem
    .icon
      flex 8rem 0 0
      height 8rem
      position relative
      text-align: center
      border 1px solid $g-brc-default
      overflow hidden
      img
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        width 100%
        height auto
    .actions
      flex 1
      padding 0 0.75rem
      .action-type
        display flex
        width 100%
        height 2.4rem
        line-height 2.4rem
        font-size $g-fs-normal
        color $g-fc-gray
        .type-text
          width 70%
          no-wrap()
      .action-num
        display flex
        margin-top 2.0rem
        color $g-fc-gray
        font-size $g-fs-lg
        .isinput
          vertical-align top
          flex 0 0 8.0rem
          height 2.6rem
          line-height 2.6rem
          text-align center
          background-color $g-bgc-con
          color $g-fc-black
          no-wrap()
        span
          vertical-align top
          display inline-block
          width 2.6rem
          height 2.6rem
          line-height 2.6rem
          font-size $g-fs-lg
          text-align center
          background-color $g-bgc-con
          extend-click()
        .disable
          color $g-col-white-g
          cursor default
    .options
      flex 1
      padding 0 0.75rem
      h2
        width 100%
        height $g-fs-xl*2
        line-height $g-fs-xl
        font-size $g-fs-normal
        color $g-fc-black
        more-wrap()
      p
        padding-top 0.75rem
        font-size $g-fs-normal
        color $g-fc-gray
        no-wrap()
      .price-box
        padding-top 1.0rem
        display flex
        justify-content space-between
        .price
          color $g-fc-red
          font-size $g-fs-normal
          span
            font-size $g-fs-xl
        .num
          color $g-fc-link
          font-size $g-fs-xl
  .count
    z-index $g-zindex-fix
    position fixed
    bottom $g-bot-bar-height
    display flex
    width 100%
    max-width $g-page-max-width
    height $g-bot-bar-height
    background-color $g-bgc-con
    border-top 1px solid $g-brc-default
    border-bottom 1px solid $g-brc-default
    line-height $g-bot-bar-height
    align-items center
    .check-all
      flex 1
      position relative
      font-size $g-fs-xl
      span
        font-size $g-fs-xl
      .btn-all
        z-index 100
        position absolute
        width 100%
        height 100%
        top 0
        left 0
    .count-all
      flex 2
      font-size $g-fs-xl
      color $g-fc-normal
      text-align right
      span
        padding-right 2.0rem
    .btn-count
      flex 1
      height 100%
      line-height $g-bot-bar-height
      background-color $g-fc-gray-l
      text-align center
      font-size $g-fs-xl
      color $g-fc-white
    .btn-start
      flex 0.5
      height 100%
      background-color $g-bgc-btn-gray
      font-size $g-fs-xl
      text-align center
      color $g-fc-white
    .btn-delete
      flex 0.5
      height 100%
      background-color $g-fc-gray-l
      font-size $g-fs-xl
      text-align center
      color $g-fc-white
    .bgred
      background-color $g-bgc-btn-red
    .bgyellow
      background-color $g-bgc-btn-yellow
    .fred
      color $g-col-red
