@import '~common/stylus/variable.styl'
@import '~common/stylus/mixin.styl'
.cart
  .cartCon
    position fixed
    top 0
    bottom $g-bot-bar-height*2
    width 100%
    max-width $g-page-max-width
  .cart-empty
    height 100%
  .shop-con
    margin-bottom 1rem
  .shop-title
    display flex
    height 4rem
    line-height 4rem
    font-size $g-fs-xxxl
    color $g-fc-black
    display flex
    span
      vertical-align top
      font-size $g-fs-xl
    .shop
      flex 1
      position relative
      .btn-shop
        position absolute
        z-index 100
        top 0
        left 0
        width 100%
        height 110%
    .shop-check
      flex 1
    .btn-shop-edit
      padding 0 0.75rem
      height 100%
    background-color $g-bgc-con
  .cart-list
    .item
      margin-top 1px
      width 100%
      height 100px
      background-color $g-bgc-con
  .item-inner
    border-bottom 1px solid $g-bgc-gray
    padding 1rem 0
    display flex
    background-color $l-bgc-cart
    font-size $g-fs-xxxl
    .choose
      position relative
      extend-click()
    .btn-choose
      position absolute
      z-index 100
      top 0
      left 0
      width 100%
      height 100%
    .cube-checkbox
      padding-right 4px
      padding-left 15px
      color $g-bgc-btn-red
    .check
      height 8rem
    .icon
      flex 8rem 0 0
      height 8rem
      position relative
      text-align: center
      border 1px solid $g-brc-default
      overflow hidden
      img
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        width 100%
        height auto
    .text
      flex 1
      padding 0 0.75rem
      h2
        width 100%
        height $g-fs-xl*2
        line-height $g-fs-xl
        font-size $g-fs-normal
        color $g-fc-black
        more-wrap()
      p
        padding-top 0.75rem
        font-size $g-fs-normal
        color $g-fc-gray
        no-wrap()
      .options
        padding-top 1.0rem
        display flex
        justify-content space-between
        .price
          color $g-fc-red
          font-size $g-fs-normal
          span
            font-size $g-fs-xxl
        .num
          color $g-fc-link
          font-size $g-fs-xl
  .count
    z-index $g-zindex-fix
    position fixed
    bottom $g-bot-bar-height
    display flex
    width 100%
    max-width $g-page-max-width
    height $g-bot-bar-height
    background-color $g-bgc-con
    border-top 1px solid $g-brc-default
    border-bottom 1px solid $g-brc-default
    line-height $g-bot-bar-height
    align-items center
    .check-all
      position relative
      flex 1
      font-size $g-fs-xxxl
      span
        vertical-align top
        font-size $g-fs-xxl
      .btn-all
        z-index 100
        position absolute
        width 100%
        height 100%
        top 0
        left 0
    .count-all
      flex 2
      font-size $g-fs-xxl
      color $g-fc-normal
    .btn-count
      flex 1
      height 100%
      line-height $g-bot-bar-height
      background-color $g-bgc-btn-red
      text-align center
      font-size $g-fs-xxl
      color $g-fc-white
