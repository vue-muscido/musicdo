@import '~common/stylus/variable.styl'
@import '~common/stylus/mixin.styl'
.cart
  .cartCon
    position fixed
    top 0
    bottom $g-bot-bar-height*2
    width 100%
    max-width $g-page-max-width
  .cart-empty
    height 100%
  .edit-all
    display flex
    heignt $g-fix-bar-height
    background-color $g-col-red
    justify-content space-between
    .massage
      padding 0 1.0rem
      margin-right 1.0rem
      line-height 4rem
      font-size $g-fs-xl
      color $g-col-white-g
      text-align center
    .btn-edit-all
      padding 0 0.75rem
      line-height 4rem
      font-size $g-fs-xl
      color $g-col-white-g
      text-align right
  .shop-con
    margin-bottom 1rem
    background-color $g-bgc-con
  .shop-title
    display flex
    height 4rem
    line-height 4rem
    font-size $g-fs-xl
    color $g-fc-black
    span
      vertical-align top
      font-size $g-fs-xl
    .shop
      flex 1
      position relative
      overflow hidden
      .btn-shop
        position absolute
        z-index 100
        top 0
        left 0
        width 100%
        height 110%
    .shop-check
      height 100%
    .btn-shop-edit
      padding 0 0.75rem
      height 100%
  .cart-list
    .item
      margin-top 1px
      width 100%
      height 100px
      background-color $g-bgc-con
  .item-inner
    border-bottom 1px solid $g-bgc-gray
    padding 1rem 0
    display flex
    background-color $l-bgc-cart
    font-size $g-fs-xxxl
    .choose
      position relative
    .btn-choose
      position absolute
      z-index 100
      top 0
      left 0
      width 100%
      height 100%
    .cube-checkbox
      padding-right 4px
      padding-left 0.75rem
      color $g-bgc-btn-red
    .check
      height 8rem
    .icon
      flex 8rem 0 0
      height 8rem
      position relative
      text-align: center
      border 1px solid $g-brc-default
      overflow hidden
      img
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        width 100%
        height auto
    .text
      flex 1
      padding 0 0.75rem
      h2
        width 100%
        height $g-fs-xl*2
        line-height $g-fs-xl
        font-size $g-fs-normal
        color $g-fc-black
        more-wrap()
      p
        padding-top 0.75rem
        font-size $g-fs-normal
        color $g-fc-gray
        no-wrap()
      .options
        padding-top 1.0rem
        display flex
        justify-content space-between
        .price
          color $g-fc-red
          font-size $g-fs-normal
          span
            font-size $g-fs-xxl
        .num
          color $g-fc-link
          font-size $g-fs-xl
  .count
    z-index $g-zindex-fix
    position fixed
    bottom $g-bot-bar-height
    display flex
    width 100%
    max-width $g-page-max-width
    height $g-bot-bar-height
    background-color $g-bgc-con
    border-top 1px solid $g-brc-default
    border-bottom 1px solid $g-brc-default
    line-height $g-bot-bar-height
    align-items center
    .check-all
      position relative
      flex 1
      font-size $g-fs-xl
      span
        font-size $g-fs-xl
      .btn-all
        z-index 100
        position absolute
        width 100%
        height 100%
        top 0
        left 0
    .count-all
      flex 1.8
      font-size $g-fs-xl
      color $g-fc-normal
      text-align right
      span
        padding 0 0.4rem
        color $g-col-red
    .btn-count
      flex 1
      height 100%
      line-height $g-bot-bar-height
      background-color $g-bgc-btn-gray
      text-align center
      font-size $g-fs-xl
      color $g-fc-white
    .isred
      background-color $g-bgc-btn-red
