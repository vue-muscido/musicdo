// 路由跳转 进场动画(滑入) -begin
.slideIn-enter-active, .slideIn-leave-active
  transition: all 0.3s

.slideIn-enter
  transform: translate3d(100%, 0, 0)
.slideIn-leave-to
  transform: translate3d(-60%, 0, 0)

// 路由跳转 出场动画(滑入) -begin
.slideOut-enter-active, .slideOut-leave-active
  transition: all 0.3s

.slideOut-enter
  transform: translate3d(-100%, 0, 0)
.slideOut-leave-to
  transform: translate3d(40%, 0, 0)
